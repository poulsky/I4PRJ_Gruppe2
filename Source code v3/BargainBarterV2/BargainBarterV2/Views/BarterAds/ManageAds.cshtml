@model IEnumerable<BargainBarterV2.Models.BarterAdd>

    @{
        ViewBag.Title = "Annoncer";
    }
    <body>
    <div class="container">
        <header class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2>Overblik</h2>
                <p>På denne side kan du få et overblik over alle de annoncer du har lavet</p>
            </div>
        </header>
        @foreach (var item in Model)
        {
            <section class="row bargainbarter-margin-top">
                <div class="col-md-8 col-md-offset-2 bargainbarter-border-all">
                    <div class="row">
                        <div class="col-md-9">
                            <p class="bargainbarter-margin-top">
                                <span class="text-primary">
                                        @Html.DisplayFor(modelItem => item.Titel)
                                    </span>
                                ,
                                <span class="text-muted">
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </span>
                            </p>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Delete", "BarterAds", new {id = item.BarterAddId})" class="btn btn-danger bargainbarter-margin-top pull-right">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Details", "BarterAds", new {id = item.BarterAddId})" class="btn btn-info bargainbarter-margin-top pull-right">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Edit", "BarterAds", new {id = item.BarterAddId})" class="btn btn-warning bargainbarter-margin-top pull-right">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-7">
                            @Html.DisplayFor(modelItem => item.Description)
                        </div>
                        <div class="col-md-5">
                            <img class="bargainbarter-margin-all" src='@Url.Action("ViewPhoto", new {id = item.BarterAddId})' width="260" height="200"/>
                        </div>
                    </div>
                </div>
            </section>

        }

    </div>
    </body>
