@model BargainBarterV2.Models.BarterAdd

@{
    ViewBag.Title = "Details";
}



<div class="container">
    <div class="row">
        <div class="well well-lg col-md-8 col-md-offset-2">
            <div class="row">
                <strong>@Model.Titel</strong>
                <i class="pull-right">@Model.Category</i>
            </div>
            <hr />

            <div class="row">
                @if (Model.ApplicationUser != null)
                {
                    @Html.ActionLink(Model.ApplicationUser.Firstname + " " + Model.ApplicationUser.Lastname, "ShowUserProfile",new { id = Model.ApplicationUserId},new {@class = ""})
                }
            </div>
            <div class="row">
                <div class="col-md-6">
                    <img src='@Url.Action("ViewPhoto", new {id = Model.BarterAddId})' width="260" height="200" />
                </div>
                <div class="col-md-6">
                    <p>Map goes here</p>
                </div>
            </div>
            <br />
            <div class="row">
                @Model.Description
                @*<h3> @Html.ActionLink("comment", "Comment", "BarterAds", new { id = Model.BarterAddId }, null)</h3>*@
                
                
                @using (Html.BeginForm("Comment", "BarterAds", new { id = Model.BarterAddId }, FormMethod.Post))
                {
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="commentstring" name="commentstring" id="srch-term">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                }


                @foreach (var item in Model.Comments)
                {
                    <h3>@Html.DisplayFor(modelItem => item.CommentText)</h3>
                        <h2><h3>@Html.DisplayFor(modelItem => item.ApplicationUser.Firstname)</h3> </h2>

                }
                
               
                
                
                

            </div>
        </div>
    </div>
    <div class="row">
        <p>
            @Html.ActionLink("Tilbage til forsiden", "Index", "Home")
        </p>
    </div>
</div>

