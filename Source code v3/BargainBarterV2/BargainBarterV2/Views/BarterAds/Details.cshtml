@using Jmelosegui.Mvc.GoogleMap
@model BargainBarterV2.Models.BarterAdd

@{
    ViewBag.Title = "Details";
}



<div class="container">
    <div class="row">
        <div class="well well-lg col-md-8 col-md-offset-2">
            <div class="row">
                <strong>@Model.Titel</strong>
                <i class="pull-right">@Model.Category</i>
            </div>
            <hr />

            <div class="row">
                @if (Model.ApplicationUser != null)
                {
                    @Html.ActionLink(Model.ApplicationUser.Firstname + " " + Model.ApplicationUser.Lastname, "ShowUserProfile",new { id = Model.ApplicationUserId},new {@class = ""})
                }
            </div>
            <div class="row">
                <div class="col-md-6">
                    <img src='@Url.Action("ViewPhoto", new {id = Model.BarterAddId})' width="260" height="200" />
                </div>

                <div class="col-md-6">
                @(Html.GoogleMap().Name("map")
                            .Height(200)
                            .ApiKey("AIzaSyADSBcKyZfoUjYmTqG5hhcfXFjwGoq7rHU")
                            .Center(c => c.Latitude(Model.ApplicationUser.Address.Coordinate.Latitude)
                                .Longitude(Model.ApplicationUser.Address.Coordinate.Longitude))
                              .Markers(m => m.Add().Title(Model.Titel)))
                </div>
            </div>
            <br />
            <div class="row">
                @Model.Description
                @*<h3> @Html.ActionLink("comment", "Comment", "BarterAds", new { id = Model.BarterAddId }, null)</h3>*@
            </div>
                <hr/>
            
          
              <div class="jumbotron">
                @foreach (var item in Model.Comments)
                {
                    @Html.DisplayFor(modelItem => item.CommentText)
                    <p id="UserofComment">
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Firstname)
                    </p>
                }
            </div>
                 

                @using (Html.BeginForm("Comment", "BarterAds", new { id = Model.BarterAddId }, FormMethod.Post))
                {
                    <div class="input-group pull-left">
                        <input type="text" class="form-control" placeholder="comment..." name="commentstring" id="srch-term">
                        <div class="input-group-btn pull-left">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                }
             
            
                
                
                

            
        </div>
    </div>
    <div class="row">
        <p>
            @Html.ActionLink("Tilbage til forsiden", "Index", "Home")
        </p>
    </div>
</div>


@section scripts
{
    @(Html.GoogleMap().ScriptRegistrar())
}