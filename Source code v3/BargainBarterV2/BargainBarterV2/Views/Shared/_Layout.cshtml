<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    
    
    <link href="~/Content/css/default.css" rel="stylesheet">
    <link href="~/Content/css/shared.css" rel="stylesheet" type="text/css" media="screen" runat="server">
    <link href="~/Content/css/Home.css" rel="stylesheet" type="text/css" media="screen" runat="server">
    

</head>
<body>


    <!--Header section -->
    <div class="container">
        <header class="jumbotron" id="mainjumpotron">
            <h1> BargainBarter v2.0</h1>
        </header>
    </div>

<div id="Sidebar">
    @RenderSection("Sidebar", required: false)
</div>

    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href=@Url.Action("Index", "Home")><img class="hidden-xs" src="~/Content/img/BargainBarter.png" alt="BargainBarter"><span class="visible-xs">BargainBarter</span> </a>
            </div>



            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> <a href=@Url.Action("Index", "Home")>Home</a></li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("New Ad", "Create", "BarterAds")</li>

                        @*<li>@Html.ActionLink("Manage Account","Index","Manage")</li>
                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
                    }
                    @*<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                        aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>*@


                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")


                @if (Request.IsAuthenticated)
            {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Manage Account", "Index", "Manage")</li>
                                <li>@Html.ActionLink("Manage adds", "ManageAds", "BarterAds")</li>
                                <li role="separator" class="divider"></li>
                                <li class="dropdown-header">Personal settings</li>
                                <li><a href="#">User Settings</a></li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                <div class="col-sm-3 col-md-3 pull-right">
                    @using (Html.BeginForm("Index", "Search", FormMethod.Get))
                    {
                        <div class="input-group navbar-form">
                            <input type="text" class="form-control" placeholder="SearchString" name="SearchString" id="srch-term">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>

    <br />
    <br />
    <br />
    @RenderBody()





    <footer>
        Copyright &copy; 2016 BargainBarter<br>
        <a href="mailto:per@ergud.com">PER@ergud.com</a>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
